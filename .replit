modules = ["nodejs-20", "web", "nix", "python-3.11", "php-8.4"]
run = "npm run dev"

[nix]
channel = "stable-25_05"
packages = ["php84Extensions.mongodb", "mongodb"]

[deployment]
run = ["sh", "-c", "php -S 0.0.0.0:5000 -t ."]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Start PHP Server"
author = 44398534
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."

[[workflows.workflow]]
name = "Start Development Servers"
author = 21909115
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Server"

[[workflows.workflow]]
name = "PHP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd php-backend && php -S 0.0.0.0:5000 -t public/"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
