modules = ["nodejs-20", "php-8.2", "web", "nix"]
run = "npm run dev"

[nix]
channel = "stable-25_05"
packages = ["php84Extensions.mongodb", "mongodb", "php82Extensions.mongodb"]

[deployment]
run = ["sh", "-c", "php -S 0.0.0.0:5000 -t ."]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Start PHP Server"
author = 44398534
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."

[[workflows.workflow]]
name = "Start Development Servers"
author = 21909115
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd php-backend && php -S 0.0.0.0:8000 -t public/"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[agent]
expertMode = true
